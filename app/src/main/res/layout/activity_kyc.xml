<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".KycActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="10dp"
            android:background="#DCFFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvKyc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Kyc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#242134"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="90dp"
                    />

                <EditText
                    android:id="@+id/etVotarIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Voter Id Number "
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvKyc"
                    android:background="@drawable/edit_text_background_box"/>

                <TextView
                    android:id="@+id/etUploadVotar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Upload Voter"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/imageupload"
                    android:drawableTint="@color/green"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:gravity="start|center"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/etVotarIdNumber"
                    android:background="@drawable/edit_text_background_box"/>

                <ImageView
                    android:id="@+id/imageVoterId"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/etUploadVotar"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/etAadharIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Aadhar Id Number"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageVoterId"
                    android:background="@drawable/edit_text_background_box"/>

                <TextView
                    android:id="@+id/etUploadAadhar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Upload Aadhar"
                    android:gravity="start|center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/imageupload"
                    android:drawableTint="@color/green"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/etAadharIdNumber"
                    android:background="@drawable/edit_text_background_box"/>

                <ImageView
                    android:id="@+id/imageAadharId"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/etUploadAadhar"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/etPanNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Pan Number"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imageAadharId"
                    android:background="@drawable/edit_text_background_box"/>

                <TextView
                    android:id="@+id/etUploadPan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="Upload Pan"
                    android:textColorHint="#A1A1A1"
                    android:paddingHorizontal="14dp"
                    android:padding="17dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="start|center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/imageupload"
                    android:drawableTint="@color/green"
                    app:layout_constraintTop_toBottomOf="@id/etPanNumber"
                    android:background="@drawable/edit_text_background_box"/>

                <ImageView
                    android:id="@+id/imagePanId"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/etUploadPan"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/etBankPassbookUpload"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Bank Passbook Upload"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:gravity="start|center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/imageupload"
                    android:drawableTint="@color/green"
                    android:textColor="@color/black"
                    android:inputType="textPersonName"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imagePanId"
                    android:background="@drawable/edit_text_background_box"/>

                <ImageView
                    android:id="@+id/imagePassbook"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/etBankPassbookUpload"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/etDrivingLicenseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:hint="Driving License Number"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/imagePassbook"
                    android:background="@drawable/edit_text_background_box"/>

                <TextView
                    android:id="@+id/etUploadDrivingLicense"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:gravity="start|center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/imageupload"
                    android:drawableTint="@color/green"
                    android:hint="Upload Driving License"
                    android:textColorHint="#A1A1A1"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/etDrivingLicenseNumber"
                    android:background="@drawable/edit_text_background_box"/>

                <ImageView
                    android:id="@+id/imageDrivingLicense"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/etUploadDrivingLicense"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textSize="16sp"
                    android:text="Next"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="17dp"
                    app:layout_constraintTop_toBottomOf="@id/imageDrivingLicense"
                    android:backgroundTint="@color/background_color"
                    android:background="@drawable/edit_text_background_box"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/btnNext"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="37dp">

                    <TextView
                        android:id="@+id/tvDontHaveAcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="#6D6D6D"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvRegisterNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/background_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:indeterminateTint="@color/guardian_color"
                    android:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHomeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/white"
            app:cardElevation="4dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toTopOf="@id/cardViewHome"
            app:layout_constraintTop_toTopOf="@id/cardViewHome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivHomeTutorCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:src="@drawable/home"
                app:tint="@color/background_color" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>