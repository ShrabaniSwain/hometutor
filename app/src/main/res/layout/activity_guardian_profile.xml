<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GuardianProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/guardian_background_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_button"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:srcCompat="@drawable/profileimage" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etNameSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="Sudip Das"
            />

        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etNameSelect"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Phone Number"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etMobileNo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvMobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="9733782373"
            />

        <TextView
            android:id="@+id/tvEmailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etMobileNo"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Email ID"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etEmailIDSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="sudip@gmail.com"
            />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etEmailIDSelect"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Gender"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etGenderSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvGender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="Male"
            />

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etGenderSelect"
            app:layout_constraintStart_toStartOf="parent"
            android:text="City"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etCitySelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:textSize="18sp"
            android:gravity="start|center"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="Bangalore"
            />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etCitySelect"
            app:layout_constraintStart_toStartOf="parent"
            android:text="State"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etStateSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="Karnataka"
            />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etStateSelect"
            app:layout_constraintStart_toStartOf="parent"
            android:text="State"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2A4767"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/etAddressSelect"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:gravity="start|center"
            android:textSize="18sp"
            android:textColor="#6F7882"
            android:background="@drawable/border_color_highlight"
            android:text="Bangalore,Karnataka"
            />

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:textSize="18sp"
            android:text="Update"
            android:padding="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAddressSelect"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            android:background="@drawable/edit_text_background_box"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>